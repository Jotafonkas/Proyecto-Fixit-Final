<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_ayuda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundapp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_contactanos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/txt_contactanos"
        android:textColor="#FF000000"
        android:textSize="46sp"
        android:textStyle="bold"
        />



    <ImageView
        android:id="@+id/imgcontactollamar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:src="@drawable/ic_phone"
        android:scaleType="centerInside"
        android:onClick="llamar"
        />

    <TextView
        android:id="@+id/txtnumerocontacto"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/imgcontactollamar"
        android:includeFontPadding="false"
        android:text="@string/numero_de_contacto"
        android:textColor="#FF737373"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imgcontactocorreo"
        android:layout_width="40.51dp"
        android:layout_height="40.51dp"
        android:layout_below="@+id/txtnumerocontacto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_mail"
        android:scaleType="centerInside"
        android:onClick="correoEnviar"/>

    <TextView
        android:id="@+id/txtmailcontacto"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/imgcontactocorreo"
        android:includeFontPadding="false"
        android:text="@string/txt_correo"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/txtserviciosdomicilio"
        android:layout_width="231dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtfixit"
        android:includeFontPadding="false"
        android:text="@string/servicios_a_domicilio"
        android:textColor="#FF000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtfixit"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_below="@id/txtmailcontacto"
        android:layout_marginBottom="-1dp"
        android:includeFontPadding="false"
        android:text="@string/fixit_tittle"
        android:textColor="#FF000000"
        android:textSize="46sp" />

    <TextView
        android:id="@+id/txtslogan"
        android:layout_width="309dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtserviciosdomicilio"
        android:gravity="center_horizontal|top"
        android:includeFontPadding="false"
        android:text="@string/txt_slogan_help"
        android:textColor="#FF000000"
        android:textSize="18sp" />

    <!-- Navbar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="@color/header"
        app:itemIconTint="@color/item_white_menu"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_menu" />
</RelativeLayout>
