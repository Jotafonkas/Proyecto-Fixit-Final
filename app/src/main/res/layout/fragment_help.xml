<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_ayuda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundapp"
    >

    <TextView
        android:id="@+id/text_contactanos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/txt_contactanos"
        android:textColor="@color/black"
        android:textSize="46sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/imgcontactollamar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text_contactanos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_phone"
        android:onClick="llamar"
        />

    <Button
        android:id="@+id/btnLlamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/imgcontactollamar"
        android:text="Llamar"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imgcontactocorreo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btnLlamar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_mail"
        android:scaleType="centerInside"
        android:onClick="correoEnviar"/>

    <Button
        android:id="@+id/btnCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/imgcontactocorreo"
        android:text="Contactar por correo"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txtfixit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnCorreo"
        android:text="@string/fixit_tittle"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:textSize="46sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtserviciosdomicilio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtfixit"
        android:text="@string/servicios_a_domicilio"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtslogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtserviciosdomicilio"
        android:gravity="center"
        android:text="@string/txt_slogan_help"
        android:textColor="@color/black"
        android:textSize="18sp" />

</RelativeLayout>
