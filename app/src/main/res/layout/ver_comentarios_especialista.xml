<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <!-- Header -->
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_comentarios_especialista"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/header"
        android:gravity="center"
        android:padding="25dp"
        />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_flechavolver"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/bottomNavigationView"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >

            <!-- Cliente 1 -->
            <LinearLayout
                android:id="@+id/cliente1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                >

                <ImageView
                    android:id="@+id/ic_usuario"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/iv_user"
                    android:layout_marginEnd="8dp"
                    />

                <TextView
                    android:id="@+id/txt_nombrecliente1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/esp_nombrecliente"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

                <RatingBar
                    android:id="@+id/estrellas1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/comentarios1"
                android:layout_width="350dp"
                android:layout_height="145dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="10dp"
                />

            <!-- Cliente 2 -->
            <LinearLayout
                android:id="@+id/cliente2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                >

                <ImageView
                    android:id="@+id/ic_usuario2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/iv_user"
                    android:layout_marginEnd="8dp"
                    />

                <TextView
                    android:id="@+id/txt_nombrecliente2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/esp_nombrecliente"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

                <RatingBar
                    android:id="@+id/estrellas2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/comentarios2"
                android:layout_width="350dp"
                android:layout_height="145dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="10dp"
                />

            <!-- Cliente 3 -->
            <LinearLayout
                android:id="@+id/cliente3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                >

                <ImageView
                    android:id="@+id/ic_usuario3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/iv_user"
                    android:layout_marginEnd="8dp"
                    />

                <TextView
                    android:id="@+id/txt_nombrecliente3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/esp_nombrecliente"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

                <RatingBar
                    android:id="@+id/estrellas3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/comentarios3"
                android:layout_width="350dp"
                android:layout_height="145dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="10dp"
                />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
