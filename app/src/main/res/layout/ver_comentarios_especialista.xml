<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <!-- Header -->
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_comentarios_especialista"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/header"
        android:gravity="center"
        android:padding="25dp"
        />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_flechavolver"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/bottomNavigationView"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- Contenido -->
            <FrameLayout
                android:id="@+id/cliente1"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:id="@+id/ic_usuario"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/iv_user"
                    />
                <TextView
                    android:id="@+id/txt_nombrecliente1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="183dp"
                    android:layout_marginTop="15.5dp"
                    android:layout_marginBottom="14.5dp"
                    android:gravity="start|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/esp_nombrecliente"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    />
                <ImageView
                    android:id="@+id/estrellas1"
                    android:layout_width="128dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="top|start"
                    android:scaleType="centerInside"
                    android:src="@drawable/estrellas" />
            </FrameLayout>
            <View
                android:id="@+id/comentarios1"
                android:layout_width="350dp"
                android:layout_height="145dp"
                android:background="@color/white"
                android:layout_below="@+id/cliente1"
                android:layout_gravity="center"
                />

            <FrameLayout
                android:id="@+id/cliente2"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/comentarios1"
                >
                <ImageView
                    android:id="@+id/ic_usuario2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/iv_user"
                    />
                <TextView
                    android:id="@+id/txt_nombrecliente2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="183dp"
                    android:layout_marginTop="15.5dp"
                    android:layout_marginBottom="14.5dp"
                    android:gravity="start|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/esp_nombrecliente"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    />
                <ImageView
                    android:id="@+id/estrellas2"
                    android:layout_width="128dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="top|start"
                    android:scaleType="centerInside"
                    android:src="@drawable/estrellas"
                    />
            </FrameLayout>
            <View
                android:id="@+id/comentarios2"
                android:layout_width="350dp"
                android:layout_height="145dp"
                android:background="@color/white"
                android:layout_below="@+id/cliente2"
                android:layout_gravity="center"
                />

            <FrameLayout
                android:id="@+id/cliente3"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/comentarios2"
                >
                <ImageView
                    android:id="@+id/ic_usuario3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/iv_user"
                    />
                <TextView
                    android:id="@+id/txt_nombrecliente3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="183dp"
                    android:layout_marginTop="15.5dp"
                    android:layout_marginBottom="14.5dp"
                    android:gravity="start|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/esp_nombrecliente"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    />
                <ImageView
                    android:id="@+id/estrellas3"
                    android:layout_width="128dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="top|start"
                    android:scaleType="centerInside"
                    android:src="@drawable/estrellas"
                    />
            </FrameLayout>
            <View
                android:id="@+id/comentarios3"
                android:layout_width="350dp"
                android:layout_height="145dp"
                android:background="@color/white"
                android:layout_below="@+id/cliente3"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>
    </ScrollView>

    <!-- NavBar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/item_white_menu"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_menu"
        android:layout_alignParentBottom="true" />

</RelativeLayout>