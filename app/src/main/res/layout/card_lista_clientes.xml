<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center">

    <!-- Card del servicio -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_specialist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/color_servicio"
        app:shapeAppearanceOverlay="@style/radius5">

        <!-- Contenido del card -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Imagen del cliente -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagen_cliente"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="15dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/radius3"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <!-- Nombre del servicio -->
            <TextView
                android:id="@+id/txt_nombreCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombredelcliente"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/imagen_cliente"
                android:layout_marginTop="10dp"/>

            <!-- Campo de texto para el nombre del cliente -->
            <TextView
                android:id="@+id/nombreCliente"
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_toEndOf="@id/imagen_cliente"
                android:layout_below="@id/txt_nombreCliente"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:textColor="@color/white"
                android:background="@color/color_servicio2"
                android:padding="5dp"/>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
